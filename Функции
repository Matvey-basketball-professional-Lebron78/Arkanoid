def place_plitku(screen, Plitka):
    """Функция, рисующая плитки.
    Принимает на вход координаты плитки, размеры плитки, цвет плитки, статус жизни плитки"""
    
    x = Plitka.x
    y = Plitka.y
    l = Plitka.l
    d = Plitka.d
    color = Plitka.color
    zhizn = Plitka.zhizn
    if zhizn == true:
        pygame.rect(screen, color, (x - l/2, y - d/2, l, d))

